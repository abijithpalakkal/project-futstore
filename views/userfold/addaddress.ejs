<script>
   document.addEventListener("DOMContentLoaded", function () {
    const image1Input = document.getElementById("image1");
    const image2Input = document.getElementById("image2");
    const image3Input = document.getElementById("image3");
    const selectedImages = document.getElementById("selectedImages");

    // Event listeners for image inputs
    image1Input.addEventListener("change", function () {
        displaySelectedImage(image1Input.files[0]);
    });
    image2Input.addEventListener("change", function () {
        displaySelectedImage(image2Input.files[0]);
    });
    image3Input.addEventListener("change", function () {
        displaySelectedImage(image3Input.files[0]);
    });

    // Function to display a selected image
    function displaySelectedImage(file) {
        if (file) {
            const image = new Image();
            image.src = URL.createObjectURL(file);
            image.alt = "Selected Image";
            image.style.width = "100%"
            selectedImages.appendChild(image);
        }
    }
});


</script>
