<%-include("./layout/head")%>
    
    <!-- Custom CSS for adjusting the brand image -->
    <link href="/user/css/login.css" rel="stylesheet">
</head>
<body>
    <%-include("./partials/navbar1") %>

    </nav>
    <section class="container-fluid px-5 row">
        
            <div class="col brandlogo">
                
                <img class="my-5" src="/user/img/brand logo.png" alt="">
            
            </div>
            <div  class="col l">
                <div class="container mt-5 shadow-lg logincol">
                    <h1 class="text-center" style="color:rgb(236, 96, 30)">log in</h1>
                    <h5 style="color: green;"><%=locals?.data%></h5>
                    <h5 style="color:red;"><%=locals?.message%></h5>
                    <form action="/login" method="POST">
                       
                  
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
            
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        
                        
                        <a href="/forgotpassword" class="text-center">forget password</a>
                        
                       
                        
                        <div class="text-center mt-3 mb-3">
                        <button type="submit" class="btn btn-primary ">log in</button>
                    </div>
                    <div class="text-center google">
                       <a href="#"> <img src="/user/img/google signup.png" alt=""></a>
                    </div>
                    <p class="text-center mt-3 pb-5" >don't have a account? <a href="/signup">sign up </a></p>
                    </form>
                
            </div>
        </div>
    </section>
    <%-include("./partials/footer") %>

    <!-- Include Bootstrap JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-SO5v5b3BY3u8pVuQa5FJ3s3SMlpb7s5K1o5Z/C4JF9x3mI1pETf5f5ECx9QQhr2qG" crossorigin="anonymous"></script>
</body>
</html>
